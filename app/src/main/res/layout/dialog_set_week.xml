<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:layout_marginBottom="14dp"
            android:layout_marginStart="18dp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:text="设置当前周"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="160dp">

        <com.teachingassistant.Support.View.WheelView.view.WheelView
            android:id="@+id/choose_week_wheel"
            android:layout_gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dip"
        android:layout_marginBottom="21dip">

        <TextView
            android:id="@+id/btn_choose_week_sure"
            android:layout_width="77dip"
            android:layout_height="33dip"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="15dip"
            android:text="确认"
            android:gravity="center"
            android:textSize="16sp" />


        <TextView
            android:id="@+id/btn_choose_week_cancel"
            android:layout_width="77dip"
            android:layout_height="33dip"
            android:layout_toStartOf="@+id/btn_choose_week_sure"
            android:text="取消"
            android:gravity="center"
            android:textSize="16sp" />
    </RelativeLayout>

</LinearLayout>